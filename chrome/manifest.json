{
    "description": "方便填工作日誌的小工具",
    "manifest_version": 3,
    "name": "NYCU Attendance+",
    "version": "1.0",
    "permissions": [
        "webRequest",
        "declarativeNetRequest",
        "scripting",
        "declarativeContent",
        "storage"
    ],
    "host_permissions": [
        "https://pt-attendance.nycu.edu.tw/"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "workLogAutoFill.html",
                "workLogAutoFill.js"
            ],
            "matches": [
                "https://pt-attendance.nycu.edu.tw/*"
            ],
            "use_dynamic_url": true
        }
    ]
}